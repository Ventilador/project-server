{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "noResolve": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
        "@types",
        "tests"
    ],
    "exclude": [
        "*.d.ts",
        "node_modules",
        "dist"
    ]
}